<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.MainPage"
             Title="MainPage">
	<ScrollView>
		<VerticalStackLayout
			Spacing="25"
			Padding="30,0"
			VerticalOptions="Start">

			<Label
				Text="Food plan evolver"
				SemanticProperties.HeadingLevel="Level1"
				FontSize="32"
				HorizontalOptions="Center"/>

			<Label
				x:Name="MainSubTitle"
				Text=""
				SemanticProperties.HeadingLevel="Level2"
				FontSize="18"
				HorizontalOptions="Center"/>

			<Button 
				x:Name="EAPageBtn"
				Text="Run EA"
				Clicked="OnEAPageClicked"
				HorizontalOptions="Center"/>

			<Button 
				x:Name="FoodPageBtn"
				Text="Food Options"
				Clicked="OnFoodPageClicked"
				HorizontalOptions="Center"/>

			<Button
				Text="Quit Program"
				Clicked="OnCloseProgram"
				HorizontalOptions="Center"/>

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>