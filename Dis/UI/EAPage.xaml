<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.EAPage"
             Title="EAPage">
    <VerticalStackLayout>
		<Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
		<Entry
			x:Name="FoodEntry"
			Placeholder="Search for a food..."
			HorizontalOptions="Center"
			/>
		<Button
			x:Name="FoodSearchBtn"
			Text="Search"
			HorizontalOptions="Center"
			Clicked="FoodSearchBtn_Clicked"
			/>
		<Picker
			x:Name="FoodOptions"
			Title="Select a food"
			HorizontalOptions="Center"
			SelectedIndexChanged="FoodOptions_SelectedIndexChanged"
			/>
		<Label
			x:Name="FoodInfoLabel"
			Text=""
			HorizontalOptions="Center"
			/>
	</VerticalStackLayout>
</ContentPage>